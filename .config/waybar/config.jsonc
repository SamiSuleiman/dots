{
  "layer": "top",
  "position": "bottom",
  // "height": 30,
  // "spacing": 4,
  "modules-left": [
    "hyprland/workspaces",
    "hyprland/language",
    "clock"
    // "custom/apps",
  ],
  "modules-center": ["mpris"],
  "modules-right": [
    "custom/pacman",
    "backlight",
    "pulseaudio",
    "network",
    "bluetooth",
    "battery",
    "disk",
    "memory",
    "custom/power",
  ],

  "disk": {
    "interval": 30,
    "format": "        medina is {percentage_used}% full والحمد لله",
    "path": "/home/sami/medina/",
  },

  "mpris": {
    "max-length": 40,
    "format": "{player_icon} {title} | {artist} - {length}",
    "format-paused": "{status_icon} <i>{title} | {artist} - {length}</i>",
    "player-icons": {
      "default": "▶",
    },
    "status-icons": {
      "paused": "󰏤",
    },
    "ignored-players": ["firefox", "chromium", "brave"],
  },
  "backlight": {
    "device": "intel_backlight",
    "format": "{icon}       {percent}%",
    "format-icons": [""],
  },

  "memory": {
    "interval": 30,
    "format": "        {}%",
    "max-length": 10,
    "tooltip": true,
    "tooltip-format": "Memory - {used:0.1f}GB used - {}%",
    "on-click": "kitty --start-as=fullscreen --title btop sh -c 'btop'",
  },
  "hyprland/window": {
    "separate-outputs": true,
  },
  "bluetooth": {
    "format": "",
    "format-disabled": "", // an empty format will hide the module
    "format-connected": "  {num_connections}",
    "tooltip-format": "{device_alias}",
    "tooltip-format-connected": " {device_enumerate}",
    "tooltip-format-enumerate-connected": "{device_alias} - {device_battery_percentage}% 󱈑",
    "on-click": "rofi-bluetooth &",
  },

  "hyprland/workspaces": {
    // "format": "{icon}  {windows}",
    // "format-icons": {
    //   "9": "󰎞      ",
    // },
    // "format-window-separator": "          ",
    // "window-rewrite-default": "",
    // "window-rewrite": {
    //   "title<.*youtube.*>": "",
    //   "class<firefox>": "",
    //   "kitty": "",
    //   "tauonmb": "",
    // },
    "disable-scroll": true,
    "all-outputs": true,
    "on-click": "activate",
  },

  "tray": {
    // "icon-size": 21,
    "spacing": 10,
  },
  "custom/pacman": {
    "interval": 3600,
    "return-type": "json",
    "exec": "pacman-updates",
    "exec-if": "exit 0",
    "on-click": "kitty -e 'paru'; pkill -SIGRTMIN+8 waybar",
    "signal": 8,
  },
  "clock": {
    "tooltip-format": "{:%A, %B %d, %Y}",
    "format": "{:%H:%M %A}",
  },
  "battery": {
    "states": {
      "good": 76,
      "warning": 20,
    },
    "format": "{icon}           {capacity}%",
    "format-charging": " {capacity}%",
    "format-icons": ["", "", "", "", ""],
    "tooltip-format": "{capacity}% capacity",
  },
  "network": {
    "format-wifi": "      {essid}",
    "format-disconnected": "󰤭",
    "format-ethernet": "",
    "tooltip-format": "Connected to {essid}",
    "on-click": "networkmanager_dmenu",
  },
  "pulseaudio": {
    // "scroll-step": 1, // %, can be a float
    "format": "{icon}    {volume}%",
    "format-muted": "󰖁",
    "format-icons": {
      "default": ["", "", "󰕾"],
      "headphone": [""],
    },
    "tooltip-format": "{volume}% volume",
    "on-click": "pamixer -t",
    "on-click-right": "pavucontrol",
    "on-scroll-up": "pamixer -i 5",
    "on-scroll-down": "pamixer -d 5",
  },
  "custom/power": {
    "format": "󰐥",
    "on-click": "wlogout",
  },
  "custom/firefox": {
    "format": " ",
    "on-click": "firefox",
  },
  "custom/kitty": {
    "format": " ",
    "on-click": "kitty",
  },
  "custom/signal": {
    "format": " ",
    "on-click": "signal-desktop",
  },
  "custom/music": {
    "format": " ",
    "on-click": "tauon",
  },
  "custom/apps": {
    "format": "󰨀",
    "on-click": "rofi -show drun",
  },
  "custom/files": {
    "format": "󰈔",
    "on-click": "thunar",
  },
}
