{
  "edit_predictions_disabled_in": ["comments"],
  "show_whitespaces": "selection",
  "auto_update_extensions": {
    "angular": false
  },
  "features": {
    "edit_prediction_provider": "supermaven"
  },
  "show_edit_predictions": true,
  "telemetry": {
    "diagnostics": false,
    "metrics": false
  },
  "ui_font_family": "Ubuntu",
  "buffer_font_family": "JetBrains Mono",
  "buffer_font_fallbacks": ["JetBrainsMono Nerd Font", "Cascadia Code"],
  "ui_font_size": 15,
  "buffer_line_height": {
    "custom": 2
  },
  "buffer_font_size": 16,
  "theme": {
    "mode": "system",
    "light": "Rosé Pine Dawn",
    "dark": "Rosé Pine Moon"
  },
  "experimental.theme_overrides": {
    "editor.background": "#0a0a0a",
    "panel.background": "#0a0a0a",
    "editor.gutter.background": "#0a0a0a",
    "tab_bar.background": "#0a0a0a",
    "title_bar.background": "#0a0a0a",
    "terminal.background": "#0a0a0a",
    "toolbar.background": "#0a0a0a",
    "status_bar.background": "#0a0a0a",
    "tab.inactive_background": "#0a0a0a"
  },
  "project_panel": {
    "dock": "right"
  },
  "current_line_highlight": "gutter",
  "cursor_blink": true,
  "toolbar": {
    "breadcrumbs": false,
    "quick_actions": false,
    "selections_menu": false
  },
  "terminal": {
    "font_family": "JetBrains Mono",
    "font_fallbacks": ["Cascadia Code"]
  },
  // "cursor_shape": "block",
  "relative_line_numbers": true,
  "vim_mode": true,
  "git": {
    "inline_blame": {
      "enabled": true
    }
  },
  "tabs": {
    "git_status": true
  },
  "inlay_hints": {
    "toggle_on_modifiers_press": {
      "alt": true
    }
    // "enabled": true,
    // "show_type_hints": true,
    // "show_parameter_hints": true,
    // "show_other_hints": true,
    // "edit_debounce_ms": 700,
    // "scroll_debounce_ms": 50
  },
  "confirm_quit": true,
  "preview_tabs": {
    "enabled": false,
    "enable_preview_from_file_finder": false,
    "enable_preview_from_code_navigation": false
  },
  "lsp": {},
  "languages": {
    // "TypeScript": {
    //   "language_servers": ["angular", "typescript", "html"]
    // },
    // "HTML": {
    //   "language_servers": ["angular", "html"]
    // },
    "TypeScript": {
      "show_edit_predictions": true
    },
    "JavaScript": {
      "code_actions_on_format": {
        "source.fixAll.eslint": false
      },
      "format_on_save": {
        "external": {
          "command": "prettier",
          "arguments": ["--stdin-filepath", "{buffer_path}"]
        }
      }
    },
    "Markdown": {
      "format_on_save": "on"
    }
  }
}
