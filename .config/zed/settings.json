{
  "preferred_line_length": 120,
  "soft_wrap": "preferred_line_length",
  "file_finder": {
    "modal_max_width": "medium"
  },
  "edit_predictions_disabled_in": ["comments"],
  "show_whitespaces": "selection",
  "auto_update_extensions": {
    "angular": false
  },
  "features": {
    "edit_prediction_provider": "supermaven"
  },
  "show_edit_predictions": true,
  "telemetry": {
    "diagnostics": false,
    "metrics": false
  },
  "ui_font_family": "Ubuntu",
  "buffer_font_family": "JetBrains Mono",
  "buffer_font_fallbacks": ["JetBrains Mono", "Cascadia Code"],
  "ui_font_size": 16,
  "buffer_line_height": "standard",
  "buffer_font_size": 16,
  "theme": {
    "mode": "system",
    "light": "Rosé Pine Dawn",
    "dark": "Rosé Pine"
  },
  "experimental.theme_overrides": {
    // "editor.background": "#000000",
    // "panel.background": "#000000",
    // "editor.gutter.background": "#000000",
    // "tab_bar.background": "#000000",
    // "title_bar.background": "#000000",
    // "terminal.background": "#000000",
    // "toolbar.background": "#000000",
    // "status_bar.background": "#000000",
    // "tab.inactive_background": "#000000"
  },
  "project_panel": {
    "dock": "right"
  },
  "current_line_highlight": "gutter",
  "cursor_blink": true,
  "toolbar": {
    "breadcrumbs": false,
    "quick_actions": false,
    "selections_menu": false
  },
  "terminal": {
    "copy_on_select": true,
    "font_family": "JetBrains Mono",
    "font_fallbacks": ["Cascadia Code"],
    "line_height": "standard"
  },
  // "cursor_shape": "block",
  "relative_line_numbers": true,
  "vim_mode": true,
  "git": {
    "inline_blame": {
      "enabled": true
    }
  },
  "tabs": {
    "git_status": true
  },
  "inlay_hints": {
    "toggle_on_modifiers_press": {
      "alt": true
    }
    // "enabled": true,
    // "show_type_hints": true,
    // "show_parameter_hints": true,
    // "show_other_hints": true,
    // "edit_debounce_ms": 700,
    // "scroll_debounce_ms": 50
  },
  "confirm_quit": true,
  "preview_tabs": {
    "enabled": false,
    "enable_preview_from_file_finder": false,
    "enable_preview_from_code_navigation": false
  },
  "lsp": {},
  "languages": {
    // "TypeScript": {
    //   "language_servers": ["angular", "typescript", "html"]
    // },
    // "HTML": {
    //   "language_servers": ["angular", "html"]
    // },
    "TypeScript": {
      "show_edit_predictions": true
    },
    "JavaScript": {
      "code_actions_on_format": {
        "source.fixAll.eslint": false
      },
      "format_on_save": {
        "external": {
          "command": "prettier",
          "arguments": ["--stdin-filepath", "{buffer_path}"]
        }
      }
    },
    "Markdown": {
      "format_on_save": "on"
    }
  }
}
