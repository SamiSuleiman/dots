{
  "features": {
    "edit_prediction_provider": "zed"
  },
  "telemetry": {
    "diagnostics": false,
    "metrics": false
  },
  "ui_font_family": "Ubuntu",
  "buffer_font_family": "Cascadia Code",
  "ui_font_size": 16,
  "buffer_line_height": "comfortable",
  "buffer_font_size": 18,
  "theme": {
    "mode": "system",
    "light": "Gruvbox Light Soft",
    "dark": "Gruvbox Dark Hard"
  },
  "experimental.theme_overrides": {
    "editor.background": "#1b1b1b",
    "panel.background": "#1b1b1b",
    "editor.gutter.background": "#1b1b1b",
    "tab_bar.background": "#1b1b1b",
    "title_bar.background": "#1b1b1b",
    "terminal.background": "#1b1b1b",
    "toolbar.background": "#1b1b1b",
    "status_bar.background": "#1b1b1b"
    // "syntax": {
    //   "comment": {
    //     "font_style": "italic"
    //   },
    //   "comment.doc": {
    //     "font_style": "italic"
    //   }
    // }
  },
  "project_panel": {
    "dock": "left"
  },
  "current_line_highlight": "gutter",
  "cursor_blink": false,
  "toolbar": {
    "breadcrumbs": false,
    "quick_actions": false,
    "selections_menu": false
  },
  "terminal": {
    "default_height": 10000,
    "font_family": "Iosevka Term"
  },
  // "cursor_shape": "block",
  "relative_line_numbers": true,
  "vim_mode": true,
  "git": {
    "inline_blame": {
      "enabled": false
    }
  },
  "tabs": {
    "git_status": true
  },
  "inlay_hints": {
    "enabled": true,
    "show_type_hints": true,
    "show_parameter_hints": true,
    "show_other_hints": true,
    "edit_debounce_ms": 700,
    "scroll_debounce_ms": 50
  },
  "confirm_quit": true,
  "preview_tabs": {
    "enabled": false,
    "enable_preview_from_file_finder": false,
    "enable_preview_from_code_navigation": false
  },
  "lsp": {},
  "languages": {
    "TypeScript": {
      "language_servers": ["angular", "typescript", "html"]
    },
    "HTML": {
      "language_servers": ["angular", "html"]
    },
    "JavaScript": {
      "code_actions_on_format": {
        "source.fixAll.eslint": false
      },
      "format_on_save": {
        "external": {
          "command": "prettier",
          "arguments": ["--stdin-filepath", "{buffer_path}"]
        }
      }
    }
  }
}
